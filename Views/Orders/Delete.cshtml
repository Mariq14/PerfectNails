@model ProjectPrettyNails.Data.Order

@{
    ViewData["Title"] = "Delete";
}

<h1>Изтриване</h1>

<h3>Сигурни ли сте, че искате да изтриете записа?</h3>
<div>
    <h4>Поръчка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Articuls)*@
            Продукт
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Articuls.Id)
        </dd class>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Quantity)*@
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Users)*@
            Потребител
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Users.Id)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
