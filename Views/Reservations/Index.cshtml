@using ProjectPrettyNails.Data
@model IEnumerable<ProjectPrettyNails.Data.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Резервации</h1>

<p>
    <a asp-action="Create">Създай нова резервация</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Services)*@
                Услуга
            </th>
            <th>
                 @*@Html.DisplayNameFor(model => model.Users)*@
                Потребител
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Services.ServiceType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Users.UserName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
