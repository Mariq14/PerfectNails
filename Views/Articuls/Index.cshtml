@using ProjectPrettyNails.Data
@model IEnumerable<ProjectPrettyNails.Data.Articul>

@{
    ViewData["Title"] = "Index";
}

<h1>Продукти</h1>

<p>
    <a asp-action="Create">Създай нов артикул</a>
</p>
<table class="table" >
    <thead>
        
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.ArticulName)*@
                Име на артикула
            </th>
            <th>
                @*  @Html.DisplayNameFor(model => model.Price)*@
                Цена
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Description)*@
                Описание
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.ImageURL1)*@
                Снимка1
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.ImageURL2)*@
                Снимка2
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.ImageURL3)*@
                Снимка3
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Type)*@
                Тип на артикула
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.DateCreated)*@

            </th>
            <th></th>
        </tr>
       
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticulName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src=" @Html.DisplayFor(modelItem => item.ImageURL1)" width="100" />
                </td>
                <td>
                    <img src=" @Html.DisplayFor(modelItem => item.ImageURL2)" width="100"/>
                   
                </td>
                <td>
                    <img src=" @Html.DisplayFor(modelItem => item.ImageURL3)" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
