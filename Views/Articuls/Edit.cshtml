@using ProjectPrettyNails.Data
@model ProjectPrettyNails.Data.Articul

@{
    ViewData["Title"] = "Edit";
}

<h1>Промени</h1>

@*<h4>Продукт</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ArticulName" class="control-label">Име на продукта</label>
                <input asp-for="ArticulName" class="form-control" />
                <span asp-validation-for="ArticulName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL1" class="control-label"></label>
                <input asp-for="ImageURL1" class="form-control" />
                <span asp-validation-for="ImageURL1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL2" class="control-label"></label>
                <input asp-for="ImageURL2" class="form-control" />
                <span asp-validation-for="ImageURL2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL3" class="control-label"></label>
                <input asp-for="ImageURL3" class="form-control" />
                <span asp-validation-for="ImageURL3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Тип</label>
                <select asp-for="Type"  asp-items="@Html.GetEnumSelectList<TypeType>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
